<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8B4513"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/arrowback"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true"
            app:tint="@android:color/white" />

        <!-- Main Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal">

            <!-- Socially Logo Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Socially"
                android:textSize="32sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="8dp"
                tools:ignore="HardcodedText" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create An Account and Sign Up"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="32dp"
                tools:ignore="HardcodedText" />

            <!-- Profile Picture Placeholder -->
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/profile_picture_placeholder"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/photocamera"
                    android:contentDescription="Add Profile Picture"
                    app:tint="@android:color/black" />

            </RelativeLayout>
            <!-- Username Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="8dp"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/usr"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif"
                    android:maxLength="50"
                    android:background="@drawable/input_underline_white"
                    android:hint="tejpatil064"
                    android:textColorHint="#CCFFFFFF"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    tools:ignore="Autofill,HardcodedText" />

            </LinearLayout>

            <!-- First Name Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Name"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="8dp"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/firstName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif"
                    android:maxLength="50"
                    android:background="@drawable/input_underline_white"
                    android:hint="Tejas"
                    android:textColorHint="#CCFFFFFF"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    tools:ignore="Autofill,HardcodedText" />

            </LinearLayout>

            <!-- Last Name Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Last name"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="8dp"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/lastName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif"
                    android:maxLength="50"
                    android:background="@drawable/input_underline_white"
                    android:hint="Patil"
                    android:textColorHint="#CCFFFFFF"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    tools:ignore="Autofill,HardcodedText" />

            </LinearLayout>

            <!-- Date of Birth Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="8dp"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/dateOfBirth"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="date"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif"
                    android:maxLength="50"
                    android:background="@drawable/input_underline_white"
                    android:hint="02 - 09 - 2003"
                    android:textColorHint="#CCFFFFFF"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    tools:ignore="Autofill,HardcodedText" />

            </LinearLayout>

            <!-- Email Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="8dp"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="textEmailAddress"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif"
                    android:maxLength="50"
                    android:background="@drawable/input_underline_white"
                    android:hint="Enter E-mail"
                    android:textColorHint="#CCFFFFFF"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    tools:ignore="Autofill,HardcodedText" />

            </LinearLayout>

            <!-- Password Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="8dp"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <EditText
                        android:id="@+id/passw"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif"
                        android:maxLength="50"
                        android:background="@drawable/input_underline_white"
                        android:hint="••••••••••"
                        android:textColorHint="#CCFFFFFF"
                        android:paddingStart="0dp"
                        android:paddingEnd="48dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        tools:ignore="Autofill,HardcodedText" />

                    <ImageView
                        android:id="@+id/passwordToggle"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic"
                        android:contentDescription="Show/Hide Password"
                        android:clickable="true"
                        android:focusable="true"
                        app:tint="@android:color/white" />

                </RelativeLayout>

            </LinearLayout>

            <!-- Create Account Button -->
            <Button
                android:id="@+id/regs"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/create_account_button"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif"
                android:text="Create an Account"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="4dp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>