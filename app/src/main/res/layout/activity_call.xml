<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Call"
    android:background="#A0522D">

    <!-- Profile Picture Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="-100dp">

        <!-- Circular Profile Picture -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/mother"
            android:background="@drawable/circular_profile_picture"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            tools:ignore="ContentDescription" />

        <!-- Name with Heart -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mother"
                android:textStyle="bold"
                android:textSize="32sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="❤️"
                android:textSize="24sp"
                android:layout_marginStart="8dp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Call Duration -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03:12"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif"
            android:layout_marginTop="8dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <!-- Bottom Control Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:gravity="center">

        <!-- Left Icon (Menu) -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/menu_icon"
            android:contentDescription="Menu"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            tools:ignore="ContentDescription" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Center Hang-up Button -->
        <ImageView
            android:id="@+id/hang"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/hang_up_icon"
            android:background="@drawable/hang_up_button_background"
            android:contentDescription="Hang Up"
            android:clickable="true"
            android:focusable="true"
            android:padding="18dp"
            tools:ignore="ContentDescription" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Right Icon (Speaker) -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/speaker_icon"
            android:contentDescription="Speaker"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</RelativeLayout>