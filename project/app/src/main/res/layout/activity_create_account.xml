<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_gradient"
    android:orientation="vertical"
    android:paddingBottom="24dp"
    tools:context=".CreateAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingTop="24dp"
        android:paddingEnd="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            style="@style/Widget.Campus.IconButton.Surface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description_back"
            app:icon="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/screenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/create_account_title"
            android:textColor="@color/login_text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_login_card"
                    android:orientation="vertical"
                    android:paddingBottom="32dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_logo_square"
                            android:contentDescription="@string/content_description_app_logo"
                            android:padding="28dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_mortarboard" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/createTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:text="@string/app_name"
                        android:textColor="@color/login_text_primary"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/createSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:text="@string/create_account_subtitle"
                        android:textColor="@color/login_text_secondary"
                        android:textSize="15sp" />

                    <!-- Full Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="24dp"
                        android:text="@string/create_account_full_name"
                        android:textColor="@color/login_text_secondary"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/fullNameField"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="28dp"
                        android:layout_marginEnd="28dp"
                        android:background="@drawable/bg_login_input_field"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/create_account_full_name"
                            android:src="@drawable/ic_person" />

                        <EditText
                            android:id="@+id/fullNameInput"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:fontFamily="sans-serif-medium"
                            android:hint="@string/create_account_full_name_placeholder"
                            android:inputType="textPersonName"
                            android:textColor="@color/login_text_primary"
                            android:textColorHint="@color/login_text_secondary"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- University Email -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/create_account_email_label"
                        android:textColor="@color/login_text_secondary"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/universityEmailField"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="28dp"
                        android:layout_marginEnd="28dp"
                        android:background="@drawable/bg_login_input_field"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="18dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/create_account_email_label"
                            android:src="@drawable/ic_mail" />

                        <EditText
                            android:id="@+id/universityEmailInput"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:fontFamily="sans-serif-medium"
                            android:hint="@string/login_email_placeholder"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/login_text_primary"
                            android:textColorHint="@color/login_text_secondary"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Graduation & Affiliation -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="28dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/graduationYearButton"
                            style="@style/Widget.Campus.Button.Field"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:contentDescription="@string/content_description_grad_year"
                            android:text="2027"
                            app:icon="@drawable/ic_calendar" />

                        <Space
                            android:layout_width="16dp"
                            android:layout_height="wrap_content" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/affiliationButton"
                            style="@style/Widget.Campus.Button.Field"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:contentDescription="@string/content_description_affiliation_info"
                            android:text="Student"
                            app:icon="@drawable/ic_affiliation" />
                    </LinearLayout>

                    <!-- Password -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/create_account_password_label"
                        android:textColor="@color/login_text_secondary"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/passwordField"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="28dp"
                        android:layout_marginEnd="28dp"
                        android:background="@drawable/bg_login_input_field"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="18dp"
                        android:paddingEnd="14dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/create_account_password_label"
                            android:src="@drawable/ic_lock" />

                        <EditText
                            android:id="@+id/passwordInput"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:fontFamily="sans-serif-medium"
                            android:hint="@string/create_account_password_placeholder"
                            android:inputType="textPassword"
                            android:textColor="@color/login_text_primary"
                            android:textColorHint="@color/login_text_secondary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/passwordToggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/login_toggle_show"
                            android:textColor="@color/login_link_text"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="28dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_shield_info" />

                        <TextView
                            android:id="@+id/passwordHint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/create_account_password_hint"
                            android:textColor="@color/login_text_secondary"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Confirm Password -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="18dp"
                        android:text="@string/create_account_confirm_password"
                        android:textColor="@color/login_text_secondary"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/confirmPasswordField"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="28dp"
                        android:layout_marginEnd="28dp"
                        android:background="@drawable/bg_login_input_field"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="18dp"
                        android:paddingEnd="14dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/create_account_confirm_password"
                            android:src="@drawable/ic_lock" />

                        <EditText
                            android:id="@+id/confirmPasswordInput"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:fontFamily="sans-serif-medium"
                            android:hint="@string/create_account_confirm_password_placeholder"
                            android:inputType="textPassword"
                            android:textColor="@color/login_text_primary"
                            android:textColorHint="@color/login_text_secondary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/confirmPasswordToggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/login_toggle_show"
                            android:textColor="@color/login_link_text"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="28dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/termsCheckbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/create_account_terms"
                            android:textColor="@color/login_text_primary"
                            app:buttonTint="@color/login_checkbox_selector" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/createAccountButton"
                        style="@style/Widget.Campus.Button.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="28dp"
                        android:layout_marginBottom="16dp"
                        android:text="@string/create_account_button"
                        app:icon="@drawable/ic_users" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/footerMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="16dp"
                android:text="@string/create_account_footer"
                android:textAlignment="center"
                android:textColor="@color/login_text_secondary"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_account_have_account"
                    android:textColor="@color/login_text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/signInLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/create_account_sign_in"
                    android:textColor="@color/login_link_text"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

