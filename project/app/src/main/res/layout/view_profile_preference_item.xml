<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="12dp"
    android:background="@drawable/bg_login_input_field"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/prefIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/profile_preferences"
        android:src="@drawable/ic_music" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/prefTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_preferences_music_label"
            android:textColor="@color/login_text_secondary"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/prefSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/profile_preferences_music_value"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_arrow_right"
        android:contentDescription="@string/profile_preferences" />

</LinearLayout>


